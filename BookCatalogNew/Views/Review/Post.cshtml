@model BookCatalogNew.Models.Post

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Reviews</h1>

<article>
    <h5 class="font-weight-bold">@Model.BookName</h5>
    <h5>@Model.Title</h5>
    <div>
        Posted <span>@Model.Posted</span> by <span>@Model.Author</span> 
    </div>
    <div>
        @Model.Body
    </div>
    <div>

        @for (int i = 0; i < @Model.Rating; i++)
        {
            <span class="fa fa-star"></span>
        }

        @for (int i = @Model.Rating; i < 5; i++)
        {
            <span class="fa fa-star-o"></span>
        }
    </div>
</article>